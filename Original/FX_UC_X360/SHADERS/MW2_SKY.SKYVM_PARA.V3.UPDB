SKY_VtoP SkyVertexMain(const SKY_VS_INPUT IN, COMPILETIME_BOOL enableParaboloidBasis)
{
	SKY_VtoP OUT;

	float4	position		= world_position(enableParaboloidBasis, IN.position);
	OUT.position			= position;

	OUT.tex.xy				= IN.tex.xy ;
	return OUT;
}

SKY_VtoP SkyVM_NoPara(const SKY_VS_INPUT IN)
{
	return SkyVertexMain(IN, PARABOLOIDBASIS_FALSE);
}

SKY_VtoP SkyVM_Para(const SKY_VS_INPUT IN)
{
	return SkyVertexMain(IN, PARABOLOIDBASIS_TRUE);
}
 
float4 SkyPixelMain(const SKY_VtoP IN) : COLOR0
{
	float4 result;

	result = tex2D(DIFFUSE_SAMPLER, IN.tex.xy );
	result.rgb = HdrExpand(result);
	return float4(result.rgb,1);
} 
  
float4 SkyPixelMainEnvMap(const SKY_VtoP IN) : COLOR0
{
    float4 result;

    result = tex2D(DIFFUSE_SAMPLER, IN.tex.xy );

    // It is critical to return the alpha value of the sampled
    // sky texture. It holds the hdr coefficient, which is needed
    // to expand the reflection color to an HDR value
    return result;
}


